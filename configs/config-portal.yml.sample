listen: "0.0.0.0:9030"
mysql: "${MYSQL_USER}:${MYSQL_PASSWORD}@tcp(${MYSQL_HOST}:${MYSQL_PORT})/${MYSQL_DATABASE}?charset=utf8mb4&parseTime=True&loc=Local"

portal:
  address: ${PORTAL_ADDRESS}
  ssh_private_key: "var/private_key"
  ssh_public_key: "var/private_key.pub"

consul:
  address: "${CONSUL_ADDR}"
  id: "${SERVICE_ID}"
  ip: "${SERVICE_IP}"
  tags: "${SERVICE_TAGS}"
  port: 9030
  interval: "3s"
  timeout: "5s"
  deregister_after: "90m"

log:
  log_level: "debug"
  ## 日志保存路径，不指定则仅打印到标准输出
  log_path: ""
  log_max_days: 7

kafka:
    topic: IAC_TASK_REPLY
    group_id: ""
    partition: 0
    // brokers: ["kafka.example.com:9092", "kafka.example.com:9093","kafka.example.com:9094"]
    brokers: []
    sasl_username: admin
    sasl_password: ""

smtpServer:
  addr: smtp.example.com:25
  username: user@example.com
  password: ""
  fromName: "IaC" # 邮件发送方的名称，不配置则为空
  from: support@example.com   # 邮件显示的发送方，不配置则使用 username 值

